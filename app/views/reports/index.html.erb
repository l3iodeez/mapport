<div class="well">
  
<% if current_user.is_admin %>
<h4>Viewing reports for all customers </h4>
<% else %>
      <h4><%= 'Viewing available reports for ' + @customer.to_s %> </h4>
      <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Report Name</th>
      <th>Description</th>
      <th>Filename</th>
      <% if current_user.is_admin %>
      <th>Customer</th>
      <% end %>
      <th>Report date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.reportname %></td>
        <td><%= report.description %></td>
        <td><%= report.filename %></td>
        <td><%= report.report_date %></td>
        <% if current_user.is_admin %>
        <td><%= report.customer.company %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure? PDFs willnot be deleted.' } %></td>
        <% end%>
        <td><%= link_to 'Download', reports_download_path(report.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.is_admin %>
<h3><%= link_to 'New Report', new_report_path %></h3>
<% end%>