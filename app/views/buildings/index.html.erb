<h2>Listing buildings</h2>

<table>
  <thead>
    <tr>
      <th>Buildingname</th>
      <th>Buildingid</th>
      <th>Street address</th>
      <th>Locality</th>
      <th>Region</th>
      <th>Postcode</th>
      <th>Customer</th>
      <th>Lon.</th>
      <th>Lat.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.buildingname %></td>
        <td><%= building.buildingid %></td>
        <td><%= building.street_address %></td>
        <td><%= building.locality %></td>
        <td><%= building.region %></td>
        <td><%= building.postcode %></td>
        <td><%= building.customer.company %></td>
        <td><%= building.longitude %></td>
        <td><%= building.latitude %></td>
        
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

