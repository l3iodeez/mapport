<%= form_for(@user, :url => {:controller =>'admin', :action =>'create'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% $calc_pass = Devise.friendly_token.first(8) %>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.text_field :password, autocomplete: "off", readonly: 'true', value:$calc_pass %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation, autocomplete: "off", readonly: 'true', value:$calc_pass %>
  </div>
  <div class="field">
  <%= f.label "Customer" %><br>
      <%= f.collection_select :customer_id, Customer.order(:company), :id, :company, include_blank: false %>
  </div>
  <div class="field">
    <%= f.label :is_admin %><br>
    <%= f.text_field :is_admin %>
  </div>
    <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
