

<div id='bodybag'>
<div id='map-container' class='element-box'>
  <div id="building-map" style='height: 400px;'></div>
</div>
<div id='building-grid-container' class='element-box'>
  <div style='height: 400px;'><%= render partial:  'buildings_grid' %></div>
</div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'building-map'}}, function(){
 markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});</script>